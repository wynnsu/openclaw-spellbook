{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openclaw.dev/schemas/spell.schema.json",
  "title": "OpenClaw Spellbook Theme",
  "type": "object",
  "additionalProperties": false,
  "required": ["theme", "author", "description", "mappings"],
  "properties": {
    "theme": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "mappings": {
      "type": "object",
      "minProperties": 1,
      "propertyNames": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9-]*$"
      },
      "additionalProperties": {
        "$ref": "#/definitions/mapping"
      }
    }
  },
  "definitions": {
    "mapping": {
      "type": "object",
      "additionalProperties": false,
      "required": ["spell"],
      "properties": {
        "spell": {
          "type": "string",
          "minLength": 1
        },
        "icon": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
